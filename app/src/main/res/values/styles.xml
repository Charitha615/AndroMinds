<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">192dp</item>
        <item name="android:background">@drawable/background</item>
    </style>
    <style name="navigation_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="normal_btn">
        <item name="android:layout_width">93dp</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#000000</item>
    </style>
    <style name="blue_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#2059ED</item>
    </style>
    <style name="submit_applicant_style">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>
     <style name="create_account_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#11CFC5</item>
    </style>




</resources>